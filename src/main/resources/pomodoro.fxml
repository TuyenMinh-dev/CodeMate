<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="mainRoot" prefHeight="500.0" prefWidth="850.0" styleClass="main-background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="roots.controllers.PomodoroController">

    <Circle mouseTransparent="true" radius="180.0" styleClass="glow-circle" />

    <HBox alignment="CENTER" spacing="20">
        <padding><Insets left="20" right="20" /></padding>

        <VBox alignment="CENTER" spacing="25.0" styleClass="card-panel" maxWidth="500" maxHeight="420" HBox.hgrow="ALWAYS">
            <padding><Insets top="30" bottom="30" left="30" right="30"/></padding>

            <Label styleClass="title-label" text="P O M O D O R O" />

            <Label fx:id="currentTaskLabel" style="-fx-text-fill: #38bdf8; -fx-font-size: 16px; -fx-font-weight: bold;" text="Chưa chọn nhiệm vụ" />

            <Label fx:id="timeLabel" styleClass="timer-display" text="25:00" />

            <HBox fx:id="configBox" alignment="CENTER" spacing="15">
                <Label text="Thời gian:" style="-fx-text-fill: #94a3b8;"/>
                <ChoiceBox fx:id="durationChoice" prefWidth="80.0" />
            </HBox>

            <HBox fx:id="buttonContainer" alignment="CENTER" spacing="20.0">
                <Button fx:id="btnStart" onAction="#handleStart" styleClass="btn, btn-primary" text="BẮT ĐẦU" />
                <Button fx:id="btnBreak" managed="false" visible="false" onAction="#handleBreak" styleClass="btn, btn-success" text="NGHỈ NGƠI" />
                <Button fx:id="btnSkip" managed="false" visible="false" onAction="#handleSkip" styleClass="btn, btn-warning" text="BỎ QUA" />
            </HBox>
        </VBox>

        <VBox fx:id="taskSidebar" spacing="15" styleClass="card-panel" maxWidth="250" prefWidth="250" maxHeight="420">
            <padding><Insets top="20" bottom="20" left="15" right="15"/></padding>

            <Label text="NHIỆM VỤ HÔM NAY" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" />

            <ListView fx:id="pomoTaskList" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background-insets: 0;" />

            <Button text="Làm mới" onAction="#refreshTaskList" style="-fx-font-size: 10px;" maxWidth="Infinity"/>
        </VBox>
    </HBox>
</StackPane>