<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #0f282a;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="roots.controllers.StatController">
    <padding><Insets bottom="30" left="30" right="30" top="30" /></padding>
    <children>
        <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="THỐNG KÊ HOẠT ĐỘNG">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin></Label>

        <ImageView fitHeight="40.0" fitWidth="40.0" onMouseClicked="#comeBackProduct" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../assets/icon/back-button.png" />
            </image>
            <VBox.margin>
                <Insets left="-800.0" top="-70.0" />
            </VBox.margin>
        </ImageView>

        <HBox alignment="CENTER" maxWidth="420.0" spacing="0" style="-fx-background-color: #162121; -fx-background-radius: 30; -fx-padding: 5; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 30;">
            <children>
                <Button fx:id="btnPomoTab" onMouseClicked="#handlePomoTabClick" prefWidth="200" style="-fx-cursor: hand; -fx-background-color: c7ff0d;" text="Năng suất làm việc" textFill="#360000">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
                <Button fx:id="btnWaterTab" onMouseClicked="#handleWaterTabClick" prefWidth="200" style="-fx-cursor: hand; -fx-background-color: #00b297;" text="Lượng nước uống" textFill="WHITE" />
            </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
        </HBox>

        <StackPane prefHeight="400.0" prefWidth="800.0">
            <children>
                <BarChart fx:id="barChart" animated="false" legendVisible="false">
                    <xAxis><CategoryAxis label="Ngày" style="-fx-background-color: grey;" tickLabelFill="WHITE" /></xAxis>
                    <yAxis><NumberAxis label="Số phút" prefHeight="359.0" prefWidth="49.0" style="-fx-background-color: grey;" tickLabelFill="WHITE" /></yAxis>
                </BarChart>
                <BarChart fx:id="waterChart" animated="false" legendVisible="false" visible="false">
                    <xAxis><CategoryAxis label="Ngày" tickLabelFill="WHITE" /></xAxis>
                    <yAxis><NumberAxis label="Số ml" tickLabelFill="WHITE" /></yAxis>
                </BarChart>
            </children>
        </StackPane>
    </children>
</VBox>
