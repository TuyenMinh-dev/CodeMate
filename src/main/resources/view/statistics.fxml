<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #0f282a;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="roots.controllers.StatController">
    <padding><Insets bottom="30" left="30" right="30" top="30" /></padding>
    <children>
        <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="NĂNG SUẤT LÀM VIỆC" />
      <ImageView fitHeight="53.0" fitWidth="53.0" onMouseClicked="#comeBackProduct" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/icon/back-button.png" />
         </image>
         <VBox.margin>
            <Insets left="-800.0" top="-120.0" />
         </VBox.margin>
      </ImageView>

        <BarChart fx:id="barChart" legendVisible="false" prefHeight="350.0" prefWidth="790.0">
            <xAxis>
                <CategoryAxis label="Ngày" tickLabelFill="WHITE" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Số phút" prefHeight="288.0" prefWidth="50.0" tickLabelFill="WHITE" />
            </yAxis>
         <padding>
            <Insets bottom="-40.0" top="50.0" />
         </padding>
        </BarChart>

        <Button onAction="#handleClose" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 40; -fx-cursor: hand;" text="QUAY LẠI" />
    </children>
</VBox>
