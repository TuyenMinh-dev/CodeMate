<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="roots.controllers.toDoController"
      style="-fx-padding: 16;">

    <!-- ADD TASK -->
    <HBox spacing="10">
        <TextField fx:id="txtTitle"
                   promptText="Add new task..."
                   HBox.hgrow="ALWAYS"/>
        <Button text="+ Add"
                onAction="#handleAdd"
                style="
                    -fx-background-color: #4CAF50;
                    -fx-text-fill: white;
                    -fx-font-weight: bold;
                "/>
    </HBox>

    <!-- FILTER -->
    <HBox spacing="10">
        <Button text="All" onAction="#filterAll"/>
        <Button text="Done" onAction="#filterDone"/>
        <Button text="Undone" onAction="#filterUndone"/>
    </HBox>

    <!-- TITLE -->
    <Label fx:id="lblListTitle"
           text="LIST TASKS"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- LIST CONTAINER -->
    <VBox style="
        -fx-background-color: #f9f9f9;
        -fx-background-radius: 10;
        -fx-padding: 10;
        -fx-border-color: #ddd;
        -fx-border-radius: 10;
    ">
        <ListView fx:id="listTodo"/>
    </VBox>

    <VBox spacing="6">
        <Label text="HÃ´m nay" style="-fx-font-weight: bold"/>
        <ProgressBar fx:id="progressBar" prefWidth="300"/>
        <Label fx:id="lblProgress" text="0%"/>
    </VBox>


</VBox>